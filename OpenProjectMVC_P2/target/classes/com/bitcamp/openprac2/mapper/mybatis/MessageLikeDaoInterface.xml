<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.bitcamp.openprac2.dao.MessageLikeDaoInterface">
 
 	<insert id="insertMessageLike" parameterType="com.bitcamp.openprac2.model.MessageLike">
 		insert into message_like (messageid, useridx) 
 		value (#{messageId}, #{userIdx})
 	</insert>
 	
 	<select id="selectMessageLike" resultType="com.bitcamp.openprac2.model.MessageLike">
 		select * from message_like where messageid=#{messageId} and useridx=#{userIdx}
 	</select>
 	
 	<select id="countMessageLike" resultType="com.bitcamp.openprac2.model.CountMessageLike">
 		select messageid, count(useridx) as likecnt from message_like group by messageid
 	</select>
 	
 	<delete id="deleteMessageLike" parameterType="com.bitcamp.openprac2.model.MessageLike">
 		delete from message_like where messageid=#{messageId} and useridx=#{userIdx}
 	</delete>
 
 
 </mapper>